<h1>Brands</h1>

<div class='row'>
  <div class='col-md-6'>
    <h3>Brand Catalog:</h3>
    <ul>
      <% @brands.each() do |brand| %>
      <li><a href='/brands/<%= brand.id() %>'><%= brand.name() %></a>: $<%= brand.price() %></li>
      <% end %>
    </ul>
  </div>

  <div class='col-md-6'>
    <h3>Add a New Brand:</h3>
    <form action='/brands/new' method='post'>
      <div class='form-group'>
        <label for='brand_name'>Name</label>
        <input type='text' name='brand_name'>
      </div>
      <div class='form-group'>
        <label for='brand_price'>Price</label>
        <input type='text' name='brand_price'>
      </div>
      <button type='submit' name='button' class='btn btn-outline-success'>Add to Catalog</button>
    </form>
  </div>
</div>
