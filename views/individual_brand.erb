<div class='row'>
  <div class='col-md-6'>
    <h1><%= @brand.name %></h1>
    <h2>$<%= @brand.price %></h2>

    <hr>

    <h4>Update Brand:</h4>
    <form action='/brands/<%= @brand.id() %>/edit' method='post'>
      <input type='hidden' name='_method' value='patch'>

      <div class='form-group'>
        <label for='update_brand_name'>Name:</label>
        <input type='text' name='update_brand_name'>
      </div>
      <div class='form-group'>
        <label for='update_brand_price'>Price:</label>
        <input type='text' name='update_brand_price'>
      </div>
      <button type='submit' name='update_button'>Update</button>
    </form>

    <hr>

    <h4>Delete Brand:</h4>
    <form action='/brands/<%= @brand.id() %>/delete' method='post'>
      <input type='hidden' name='_method' value='delete'>
      <button type='submit' name='delete_button'>Delete</button>
    </form>

  </div>

  <div class='col-md-6'>
    <h3>Available at the following stores:</h3>
    <ul>
      <% @brand.stores.each() do |store| %>
      <li><a href='/stores/<%= store.id() %>'><%= store.name() %></a></li>
      <% end %>
    </ul>
  </div>
</div>
