<div class='row'>
  <div class='col-md-6'>
    <h1><%= @store.name %></h1>

    <hr>

    <h3>Store Inventory:</h3>
    <ul>
      <% @store.brands.each() do |brand| %>
      <li><a href='/brands/<%= brand.id() %>'><%= brand.name() %></a>: $<%= brand.price() %></li>
      <% end %>
    </ul>
  </div>

  <div class='col-md-6'>
    <h4>Update Store</h4>
    <form action='/stores/<%= @store.id() %>/edit' method='post'>
      <input type='hidden' name='_method' value='patch'>

      <div class='form-group'>
        <label for='update_store_name'>Update Name:</label><br>
        <input type='text' name='update_store_name'>
      </div>

      <label for='add_to_inventory'>Add to Inventory:</label><br>
      <% @available_brands.each() do |brand| %>
      <input type='checkbox' name='add_brands[]' value='<%= brand.id() %>' id='<%= brand.name() %>'><%= brand.name() %><br>
      <% end %>

      <label for='remove_from_inventory'>Remove from Inventory:</label><br>
      <% @store.brands.each() do |brand| %>
      <input type='checkbox' name='remove_brands[]' value='<%= brand.id() %>'><%= brand.name() %><br>
      <% end %>

      <button type='submit' name='update_button' class='btn btn-outline-warning'>Update</button>
    </form>

    <hr>

    <h4>Delete Store</h4>
    <form action='/stores/<%= @store.id() %>/delete' method='post'>
      <input type='hidden' name='_method' value='delete'>
      <button type='submit' name='delete_button' class='btn btn-outline-danger'>Delete</button>
    </form>
  </div>
</div>
