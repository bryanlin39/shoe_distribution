<h1>Stores</h1>

<div class='row'>
  <div class='col-md-6'>
    <h3>Distribution List:</h3>
    <ul>
      <% @stores.each() do |store| %>
      <li><a href='/stores/<%= store.id() %>'><%= store.name() %></a></li>
      <% end %>
    </ul>
  </div>

  <div class='col-md-6'>
    <h3>Add a New Store</h3>
    <form action='/stores/new' method='post'>
      <div class='form-group'>
        <label for='store_name'>Store Name: </label>
        <input type='text' name='store_name'>
      </div>
      <button type='submit' name='button' class='btn btn-outline-success'>Add to Distribution List</button>
    </form>
  </div>
</div>
